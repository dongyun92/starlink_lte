[Unit]
Description=Starlink Ground Station Receiver
After=network-online.target
Wants=network-online.target
StartLimitIntervalSec=0

[Service]
Type=simple
WorkingDirectory=/home/pi/starlink_lte
ExecStart=/usr/bin/python3 /home/pi/starlink_lte/starlink/real_time_dashboard.py
Restart=always
RestartSec=1
User=pi
Group=pi

[Install]
WantedBy=multi-user.target
