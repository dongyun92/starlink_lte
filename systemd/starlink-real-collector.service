[Unit]
Description=Starlink gRPC-Web Collector
After=network-online.target
Wants=network-online.target
StartLimitIntervalSec=0

[Service]
Type=simple
WorkingDirectory=/home/pi/starlink_lte
ExecStart=/usr/bin/python3 /home/pi/starlink_lte/starlink/collector/grpc_web_collector.py --control-port 9201 --dish-ip 192.168.100.1
Restart=always
RestartSec=1
User=pi
Group=pi

[Install]
WantedBy=multi-user.target
