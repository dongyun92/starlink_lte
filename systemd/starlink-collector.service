[Unit]
Description=Starlink Remote Collector
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/home/pi/starlink_lte
ExecStart=/usr/bin/python3 /home/pi/starlink_lte/starlink/collector/remote_collector.py --control-port 8899 --data-dir /home/pi/starlink-data
Restart=always
RestartSec=1
StartLimitIntervalSec=0
User=pi
Group=pi

[Install]
WantedBy=multi-user.target
